<% content_for :navbar, render("layouts/user_nav") %>

<%= render :layout => "layouts/minimal" do %>
  <% if has_content?(:description) || has_content?(:actions) %>
    <div class="page-header">
      <div class='container'>
        <div class="row row-same-height">
          <div class="col-md-12 col-sm-height col-middle">
            <h2 class='m0'><%= @title %></h2>
            <%= yield :description %>
          </div>
          <div class="col-md-2 col-sm-height col-middle">
            <%= yield :actions %>
          </div>
        </div>
      </div>
    </div><!-- /.page-header -->
  <% end %>

  <div class='container'>
    <div class='row'>
      <%= render "layouts/flashes" %>
    </div>
  </div>

  <div id="content">
    <%= yield %>
  </div> <!-- /#content -->
<% end %>
